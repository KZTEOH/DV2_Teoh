{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 400,
    "height": 500,
    "title": "Happiness Comparsion between Region",
    "data": {
      "url": "https://raw.githubusercontent.com/KZTEOH/DV2_Teoh/main/Happines_2015_stackbar.csv"
    },
    "params": [ {
      "name": "Attribute_selection",
      "bind": {
      "input": "select",
      "options": [
        null,
        "Economy (GDP per Capita)",
        "Family",
        "Health (Life Expectancy)",
        "Freedom",
        "Trust (Government Corruption)",
        "Generosity",
        "Dystopia Residual"
    ],
    "labels":[
      "Show All",
      "Economy (GDP per Capita)",
      "Family",
      "Health (Life Expectancy)",
      "Freedom",
      "Trust (Government Corruption)",
      "Generosity",
      "Dystopia Residual"
    ],
    "name": "Happiness Attribute: " }
    } ],
    "transform": [
      {"filter": "Attribute_selection == null || datum.Attribute == Attribute_selection"}
      ],

    "layer": [
      {
            "mark": "bar",
    "encoding": {
      "x": {
        "field": "Region",
        "type": "ordinal",
        "sort": {"op": "sum", "field": "Score", "order":"descending"}
      },
      "y": {
        "field":"Score",
        "type":"quantitative",
        "aggregate":"sum",
        "stack": "zero",
        "sort": {"field": "Score", "order":"descending"},
        "title": "Average Happiness Score"
      },
      "color": {
        "type":"nominal",
        "field": "Attribute",
        "scale": {
          "domain": [
            "Economy (GDP per Capita)",
            "Family",
            "Health (Life Expectancy)",
            "Freedom",
            "Trust (Government Corruption)",
            "Generosity",
            "Dystopia Residual"
          ],
          "range": ["#1E90FF","#9370DB","#DC143C","#FF69B4","#FF8C00","#9ACD32","#CD853F","#FFD700","#808080"]
          
        },
        "title": "Happiness Attribute:"   
      },
      
      
      "tooltip": [
        {"field": "Attribute", "type": "nominal"},
        {"field": "Score", "type": "quantitative", "format": ".3f"},
        {"field": "Region", "type": "nominal"}
        ]}
    }
    ],

    
    "config": {}
  }