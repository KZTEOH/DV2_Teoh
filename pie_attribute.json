{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": { "url": "https://raw.githubusercontent.com/KZTEOH/DV2_Teoh/main/Happines_2015_stackbar.csv"},
    "width": 400,
    "height": 400,
    "params": [
      {
        "name": "Region_selection",
  "bind": {
    "input": "select",
    "options": [
      null,
      "Australia and New Zealand",
      "Central and Eastern Europe",
      "Eastern Asia",
      "Latin America and Caribbean",
      "Middle East and Northern Africa",
      "North America",
      "Southeastern Asia",
      "Southern Asia",
      "Sub-Saharan Africa",
      "Western Europe"
  ],
  "labels":[
    "Show All",
    "Australia and New Zealand",
    "Central and Eastern Europe",
    "Eastern Asia",
    "Latin America and Caribbean",
    "Middle East and Northern Africa",
    "North America",
    "Southeastern Asia",
    "Southern Asia",
    "Sub-Saharan Africa",
    "Western Europe"
  ],
  "name": "Region Selection: "
  } }
    ],
    "transform": [
  {"filter": "Region_selection == null || datum.Region == Region_selection"}
  ],
    "mark": {"type": "arc", "innerRadius": 50},
    "encoding": {
      "theta": {"field": "Score", "type": "quantitative"},
      "color": {"field": "Attribute", "type": "nominal",
      "scale": {
          "domain": [
            "Economy (GDP per Capita)",
            "Family",
            "Health (Life Expectancy)",
            "Freedom",
            "Trust (Government Corruption)",
            "Generosity",
            "Dystopia Residual"
          ],
          "range": ["#1E90FF","#9370DB","#DC143C","#FF69B4","#FF8C00","#9ACD32","#FFD700","#808080","#CD853F"]
        },
        "title": "Happiness Attribute"        
      },
  
  "tooltip": [
  {"field": "Attribute", "type": "nominal", "title":"Happiness Attribute"},
  {"field": "Score", "type": "quantitative", "format": ","},
  {"field": "Region", "type": "nominal"}
  ]
    },
    "config": {}
  }